@model DataAccess.Models.Empresa

<h1>Editar Empresa</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Actualizar", "Empresas")" method="get">
            <input type="text" name="id" asp-for="Id" hidden>
            <div class="form-group">

                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" asp-for="NombreEmpresa"><br>

                <label for="rubro">Rubro</label>
                <input type="text" class="form-control" name="rubro" asp-for="Rubro"><br>

                <label for="telefono">Telefono</label>
                <input type="text" class="form-control" name="telefono" asp-for="Telefono"><br>

                <label for="email">Email</label>
                <input type="text" class="form-control" name="email" asp-for="Email"><br>

                <button type="submit" class="btn btn-warning">Edit</button>
            </div>
        </form>
    </div>
</div>